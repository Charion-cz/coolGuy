<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coolGuy.dao.GoodsDao">
    <resultMap id="goodsMap" type="goods">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="goods_num" property="goodsNum"/>
        <result column="parent_id" property="parentId"/>
        <result column="template_id" property="templateId"/>
    </resultMap>

    <resultMap id="cartGoodsMap" type="cartGoods">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
        <result column="name" property="name"/>
        <result column="goods_num" property="goodsNum"/>
        <result column="parent_id" property="parentId"/>
        <result column="template_id" property="templateId"/>
    </resultMap>

    <select id="findById" parameterType="int" resultMap="goodsMap">
        select * from tb_category where id = #{id}
    </select>

    <select id="findByName" resultMap="goodsMap" parameterType="string">
        select * from tb_category where name like #{name}
    </select>

    <select id="countTotal" resultType="int" parameterType="string">
        select count(*) from tb_category where name like #{name}
    </select>

</mapper>